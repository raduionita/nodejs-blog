doctype html
html
  head
    title= ucfirst(module)
    link(rel="shortcut icon", type="image/x-icon", href="/img/favicon.ico")
    link(rel='stylesheet', href='/css/style.css')
  body
    nav
      each self in modules
        if(self == module)
          div.active
            a(href="/admin/#{self}")= ucfirst(self)
        else
          div
            a(href="/admin/#{self}")= ucfirst(self)
  
    block body
    
    script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.5/angular.js")
    script(type="text/javascript" src="/js/script.js")